{
  "name": "deciduous-previewer",
  "displayName": "Deciduous Previewer",
  "description": "Previewer for Deciduous decision trees",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": "https://github.com/rpetrich/deciduous-vscode.git",
  "categories": [
    "VSCode Extension"
  ],
  "activationEvents": [
    "onWebviewPanel:deciduous-previewer.preview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "webview/context": [
        {
          "command": "deciduous-previewer.exportSVG",
          "when": "webviewId == 'deciduous-previewer.preview'"
        }
      ]
    },
    "commands": [
      {
        "command": "deciduous-previewer.showPreview",
        "title": "Open Deciduous Preview"
      },
      {
        "command": "deciduous-previewer.exportSVG",
        "title": "Export Deciduous SVG",
        "enablement": "webviewId == 'deciduous-previewer.preview'"
      }
    ],
    "keybindings": [
      {
        "command": "deciduous-previewer.showPreview",
        "key": "ctrl+shift+d",
        "mac": "shift+cmd+d"
      }
    ]
  },
  "scripts": {
    "prepare": "cp node_modules/deciduous/layout.ts src/",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "deciduous": "github:rpetrich/deciduous",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@hpcc-js/wasm-graphviz": "^1.6.1",
    "js-yaml": "^4.1.0"
  }
}
